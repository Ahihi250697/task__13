mixin fonts(...items)
    each item in items 
        link(href=item rel="stylesheet")
        
mixin css(...items)
    each item in items 
        link(href!=item rel="stylesheet")

mixin script(...items)
    each item in items 
        script(src=item)

mixin layoutHeader(path, ...items)
    h1.header__h1
        figure
            img(src= path + "/img__logo.png" alt="ロゴ")
            a(href="../index.html")
        img(src= path + "/img__logoText.png" alt="ロゴ")
    div.header__vendor
        - var list = 1
        each item in items
            if item
                div(class="header__vendor--div" + list++)
                    a(href='#link')!= item
            else 
                div(class="header__vendor--div3")
                    a(href='#link') ENTRY
        div.header__bar
            span 
            span 
            span

mixin layoutLinkTop(...items)
    div.sectionPrimary__top
        div.sectionPrimary__parent
            a(href="../index.html") TOP
            div.sectionPrimary__top--wrapper
                each  item in items 
                    a(href="#link")                                                                           
                        span= item
mixin layoutHeaderTitle(title1, title2)
    h2.sectionPrimary__title 
        span= title1
        span= title2

mixin layoutslider(namclass,...items)
    - var list = 1
    each item in items
        figure(class= namclass + "--figure figure" + list++)
            img(class= namclass + "--img", src=item, alt="ビジネス-バックグラウンド")

