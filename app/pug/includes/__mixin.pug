mixin layoutQuestion(title)
    div.faq__questions--part
        div.faq__questions--Q
            span Q.
            p= title 
            div.faq__questions--button 
                span 
                span
        div.faq__questions--A 
            div.faq__questions--hiden
                span A.
                if block 
                    block

mixin layoutUlMenu(title, ...items)
    div.header__menu--wrap
        h3.header__menu--title= title
        ul.header__menu--ul
            each item in items
                li.header__menu--list
                    div.header__menu--arrow
                        span
                        span
                    a(href="#link")= item

mixin layoutModal(word, title, content)
    div(class="modal__container word" + word)
        h2.modal__title
            span word
            span= word
        div.modal__wrapper
            figure 
                img(src="../images/img_page2_modalword" + word + ".png")
            div.modal__content 
                span!= title 
                p!= content
                a(href="#link") 詳細はこちら
        div.modal__cross
            span 
            span
